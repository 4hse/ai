{
  "mcpServers": {
    "4hse-mcp-local-stdio": {
      "command": "docker",
      "args": [
        "exec",
        "-i",
        "4hse-ai",
        "php",
        "artisan",
        "mcp:serve"
      ],
      "env": {
        "MCP_MODE": "dev"
      }
    },
    "4hse-mcp-local-http": {
      "type": "http",
      "url": "http://127.0.0.1:8080/mcp",
      "headers": {
        "Authorization": "Bearer ${MCP_TOKEN}"
      }
    }
  }
}
